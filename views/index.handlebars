<h1 class="text-center text-white">Solar Clicker!</h1>
<div class="container w-100 mx-20">
  <div class="row align-items-start">
    <div class="col-3 ">
      <div class="flex vh-100 mb-3 text-white">
        <h2 class="text-center ">SHOP</h2>
        <hr  size="8" >
        <button class="rounded mercury col-12 my-2">Mercury</button>
        <button class="rounded venus col-12 my-2">Venus</button>
        <button class="rounded earth col-12 my-2">Earth</button>
        <button class="rounded mars col-12 my-2">Mars</button>
        <button class="rounded jupiter col-12 my-2">Jupiter</button>
        <button class="rounded saturn col-12 my-2">Saturn</button>
        <button class="rounded uranus col-12 my-2">Uranus</button>
        <button class="rounded neptune col-12 my-2">Neptune</button>
        <button class="rounded pluto col-12 my-2">Pluto</button>
      </div>
    </div>
    <div class="col-6  text-center">
      <div class="flex vh-100 mb-3 button">
        <h4 class="text-white text-center align-self-start">Points:</h4>
        {{!-- <img class="my-4 align-self-center col-12" src="https://tse4.mm.bing.net/th?id=OIP.xVOxyHmMxYm3pfWo14GELwAAAA&pid=Api&P=0" alt="placeholder"> --}}
        <button class="clicker rounded-circle col-12 text-dark">
          Click Here</button>
      </div>
    </div>
    <div class="col-3 ">
      <div class="flex vh-100 mb-3">
        <h2 class="text-center text-white">Message Board</h2>
        <hr  size="8" class="text-white" >
        {{> message}}
      </div>

    </div>
  </div>
  <style>
    body{
      background-image: url(https://images-assets.nasa.gov/image/PIA18906/PIA18906~medium.jpg);
    }
    .clicker{
      background-image: url(https://images-assets.nasa.gov/image/PIA00123/PIA00123~small.jpg);
    }
  </style>
</div>
